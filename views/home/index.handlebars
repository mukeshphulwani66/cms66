<div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8">

          <h1 class="my-4">Home
            {{!-- <small>Secondary Text</small> --}}
          </h1>

          {{#each posts}}
          <!-- Blog Post -->
          <div class="card mb-4 w-75" >
            <img class="card-img-top" src="uploads/{{file}}" alt="image not available in dummy post">
            <div class="card-body">
              <h2 class="card-title">{{title}}</h2>
              <p class="card-text">{{body}}</p>
              <a href="/post/{{slug}}" class="btn btn-primary">Read More &rarr;</a>
            </div>
            <div class="card-footer text-muted">
              Posted on {{generateTime date "MMMM Do YYYY"}} by
              <a href="#">{{user.firstName}}</a>
            </div>
          </div>

          {{/each}}

          <!-- Pagination -->
          <ul class="pagination justify-content-center mb-4">

            {{#paginate current=current pages=pages}}

            {{/paginate}}
           
          </ul>

        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

          <!-- Search Widget -->
          {{!-- <div class="card my-4">
            <h5 class="card-header">Search</h5>
