<h1>comments</h1>


<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Owner</th>
      <th>comment</th>
      <th>status</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
      {{#each comments}}
    
      <tr>
      <th scope="row">{{id}}</th>
      <td>{{user.firstName}}</td>
      <td>{{body}}</td>
      <td><input data-id="{{id}}" type="checkbox" {{#if approveComment }} checked {{/if}} name="approveComment"></td>
      <td>{{generateTime date 'MMM Do YYYY'}}</td>
      <td>
          <form action="/admin/comments/{{id}}?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger">Delete</button>
          </form>
      </td>
      </tr>
  
      {{/each}}
    
  </tbody>
</table>