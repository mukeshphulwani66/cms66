    <script>
var ctx = document.getElementById("myChart").getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: ["Posts", "Category", "Comments"],
        datasets: [{
            label: 'CMS Data',
            data: [{{postCount}}, {{categoryCount}}, {{commentCount}}],
            backgroundColor: [
